<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup on InstaStay</h1>
        <div class="col-6 offset-3 mt-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" placeholder="enter username" name="username" class="form-control"
                        required>
                    <div class="valid-feedback">username looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" placeholder="enter email" name="email" class="form-control"
                        required>
                    <div class="valid-feedback">email looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input type="password" id="password" placeholder="enter password" name="password" class="form-control"
                        required>
                    <div class="valid-feedback">password looks good!</div>
                </div>
                <button class="btn btn-success mt-3" type="submit">SignUp</button>

            </form>
        </div>
    </div>